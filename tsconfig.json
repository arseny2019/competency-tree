{
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "strict": true,
        "skipLibCheck": true,
        "noEmit": true,
        "allowJs": true,
        "checkJs": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "types": [
            "astro/client",
            "react",
            "react-dom"
        ]
    },
    "include": [
        "src",
        "astro.config.mjs",
        "src/env.d.ts"
    ]
}